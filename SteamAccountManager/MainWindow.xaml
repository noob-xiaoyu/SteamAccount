<Window x:Class="SteamAccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SteamAccountManager.ViewModels"
        xmlns:converters="clr-namespace:SteamAccountManager.Converters"
        mc:Ignorable="d"
        Title="Steam 账号管理器" Height="600" Width="950" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:StringContainsConverter x:Key="StringContainsConverter"/>
        <!-- 统一按钮样式，去除默认边距 -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 按钮工具栏 -->
            <RowDefinition Height="Auto"/>
            <!-- 输入区域 -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 1. 顶部操作按钮工具栏 -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal">
                <Button Content="批量添加" Command="{Binding BatchAddCommand}" Background="#D4EDDA"/>
                <Button Content="更改选中" Command="{Binding ChangeAccountCommand}" Background="#CFF4FC"/>
                <Button Content="启动 Steam 登录" Command="{Binding LaunchSteamLoginCommand}" Background="#FFF3CD"/>
                <Button Content="批量更新昵称 (API)" Command="{Binding UpdateNicknamesCommand}"/>
                <Button Content="更新封禁状态 (API)" Command="{Binding UpdateBanStatusCommand}" Background="#F8D7DA"/>
                <Button Content="删除选中" Command="{Binding DeleteAccountCommand}" Background="#F8D7DA"/>
            </StackPanel>
        </Border>

        <!-- 2. API Key 输入区域 (已移除 Steam 路径输入框) -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Steam Web API Key:" VerticalAlignment="Center" Margin="5,0,10,0"/>
            <TextBox Grid.Column="1" 
                x:Name="ApiKeyTextBox" 
                Text="{Binding SteamApiKey, UpdateSourceTrigger=PropertyChanged}" 
                TextChanged="ApiKeyTextBox_TextChanged" 
                VerticalContentAlignment="Center" Margin="0,5,0,5"/>
        </Grid>

        <!-- 3. 账号数据表格 -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding AccountsView}"
                  SelectedItem="{Binding SelectedAccount}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Background="White"
                  BorderBrush="#CCCCCC"
                  HorizontalGridLinesBrush="#DDDDDD"
                  CanUserSortColumns="False"
                  AlternatingRowBackground="#F9F9F9">

            <!-- ★ 新增：为每一行添加右键上下文菜单 ★ -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="更改此账号" Command="{Binding DataContext.ChangeAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                <MenuItem Header="登录此账号" Command="{Binding DataContext.LaunchSteamLoginCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                <Separator />
                                <MenuItem Header="删除此账号" Command="{Binding DataContext.DeleteAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Foreground="Red"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status, Converter={StaticResource StringContainsConverter}, ConverterParameter=封禁}">
                            <Setter Property="Foreground" Value="Red"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status, Converter={StaticResource StringContainsConverter}, ConverterParameter=冷却中}">
                            <Setter Property="Foreground" Value="#D9534F"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- 昵称 / 个人资料 -->
                <DataGridTemplateColumn Header="昵称 / 个人资料" Width="1.8*" SortMemberPath="Nickname">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,0">
                                <Hyperlink NavigateUri="{Binding ProfileUrl}" RequestNavigate="Hyperlink_RequestNavigate" TextDecorations="None">
                                    <TextBlock Text="{Binding Nickname}"/>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 用户名 -->
                <DataGridTextColumn Header="用户名" Binding="{Binding Username}" Width="1.2*"/>

                <!-- 二级 -->
                <DataGridTextColumn Header="二级" Binding="{Binding IsPrimeText}" Width="0.5*"/>

                <!-- 状态 -->
                <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="1.8*"/>

                <!-- SteamID64 -->
                <DataGridTextColumn Header="SteamID64" Binding="{Binding SteamId64}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>